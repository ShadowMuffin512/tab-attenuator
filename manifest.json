{
	"manifest_version": 3,
	"name": "Tab Attenuator",
	"version": "1.0",

	"description": "Pick a tab and set it as attenuated - all other tabs will quiet down while audio is playing!",

	"icons": {
		"48": "images/logo-48.png"
	},

	"permissions": ["tabs", "storage", "scripting"],
	"host_permissions": [
		"*://*/*"
	  ],

	"background": {
		"service_worker": "background/background.js",
		"type": "module"
	},

	"action": {
		"default_icon": {
			"16": "images/logo-16.png",
			"24": "images/logo-24.png",
			"32": "images/logo-32.png",
			"48": "images/logo-48.png"
		},
		"default_title": "Tab Attenuator",
		"default_popup": "popup/index.html"
	}
}
